
@{
    ViewBag.Title = "Basket";

    int summ = 0;
}

<h2>Корзина</h2>
<div>

    <table>
        <tr>
            <td><p>Название</p></td>
            <td><p>Цена</p></td>
            <td><p></p></td>

        </tr>
        @foreach (var item in ViewBag.ProdInBasket)
        {

            summ += @item.Price;

            <tr>
                <td><p><a href="">@item.ProdName</a></p></td>
                <td><p>@item.Price</p></td>
                <td><p><a href="/Home/Delete/@item.ProdId">Delete</a></p></td>
            </tr>

        }
        <tr>
            <td><p>Итого</p></td>
            <td><p>@summ</p></td>
            <td><p></p></td>

        </tr>
    </table>
</div>

