@{
    ViewBag.Title = "Web Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    
    <table>
        <tr>
            <td><p>Категория</p></td>
       </tr>
        @foreach (var cat in ViewBag.Categories)
        {
            <tr>
                <td><p><a href="/Home/ShowProducts/@cat.Id">@cat.Name</a></p></td>
            </tr>
        }
    </table>
</div>