
@{
    ViewBag.Title = "Show Products";

}

<div>

    <table>
        <tr>
            <td><p>Название</p></td>
            <td><p>Цена</p></td>
            <td><p>Описание</p></td>
            <td><p></p></td>
        </tr>
        @foreach (var cat in ViewBag.Prod)
        {
        <tr>
            <td><p><a href="">@cat.Name</a></p></td>
            <td><p>@cat.Price</p></td>
            <td><p>@cat.Description</p></td>
            <td><p><a href="/Home/Basket/@cat.Id">В корзину</a></p></td>
        </tr>
        }
    </table>
</div>